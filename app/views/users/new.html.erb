<h1 class="head-letter">新規ユーザー登録</h1>
<%= image_tag "border_design.png", class: "main_pic" %>

<% if @user.errors.any? %>
<div id="errors_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved: </h2>
  <ul>
    <% @user.errors.full_messages.each do | msg | %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
  <%= form_with(model: @user, local: true) do | f | %>
  <div class="input-wrap">
    <div class="new-input">
      <%= f.label :"名前:" %>
      <%= f.text_field :name, class:"newname-input" %>
      </div>
      <div class="new-input">
        <%= f.label :"Eメール:" %>
        <%= f.email_field :email, class:"newemail-input" %>
      </div>
      <div class="new-input">
        <%= f.label :"パスワード:" %>
        <%= f.password_field :password, class:"newpassword-input" %>
      </div>
      <div class="new-input">
        <%= f.label :"確認用パスワード:" %>
        <%= f.password_field :password_confirmation, class:"newpass-confirm" %>
      </div>
    <div class="new-submit">
      <%= f.submit "Create my acount"%>
    </div>
  </div>
  <%= image_tag "border_design.png", class: "bottom_pic" %>
<%= link_to "ブログ一覧へ", blogs_path, class:"link-around"  %>
<% end %>
